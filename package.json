{
  "name": "code-formatter-browser-extension",
  "version": "1.0.0",
  "description": "A browser extension for formatting code.",
  "main": "src/background.ts",
  "type": "module",
  "scripts": {
    "build": "rollup -c",
    "watch": "rollup -c -w",
    "start": "web-ext run",
    "dev": "pnpm run build && web-ext run",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "lint": "biome check",
    "lint:fix": "biome check --write",
    "format": "biome format --write"
  },
  "dependencies": {
    "prettier": "^3.6.2"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.0.6",
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-typescript": "^12.1.3",
    "@types/chrome": "^0.0.327",
    "@vitest/ui": "^3.2.4",
    "rollup": "^4.44.1",
    "rollup-plugin-copy": "^3.5.0",
    "rollup-plugin-terser": "^7.0.2",
    "typescript": "^4.0.0",
    "vitest": "^3.2.4",
    "web-ext": "^6.0.0"
  },
  "keywords": [
    "browser",
    "extension",
    "formatter",
    "code"
  ],
  "author": "",
  "license": "MIT"
}
